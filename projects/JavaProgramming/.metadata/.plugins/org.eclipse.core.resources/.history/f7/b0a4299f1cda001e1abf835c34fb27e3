package ch05.sltn;

import java.util.Scanner;

public class Sltn9 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scanner = new Scanner(System.in);
		boolean flag = true;
		int[] score = new int[0];
		
		while (flag) {
			String menuCode = "";
			String input = "";
			int studentCnt = 0;
			
			System.out.println("--------------------------------------------------");
			System.out.println("1. 학생수 | 2. 점수입력 | 3. 점수리스트 | 4. 분석 | 5. 종료");
			System.out.println("--------------------------------------------------");
			System.out.print("선택 > ");
			input = scanner.nextLine();
			switch(input) {
				case "1":
					System.out.print("학생수>");
					studentCnt = Integer.parseInt(scanner.nextLine());
					System.out.println(studentCnt);
					score = new int[studentCnt];
					break;
				case "2":
					System.out.print("점수입력>");
					for(int i = 0; i < studentCnt; i++) {
						score[i] = Integer.parseInt(scanner.nextLine());
					}
				default:
					System.out.println("비정상적인 입력입니다. 주어진 번호(1~5)에 대해서 입력하세요.");
					System.out.println("입력하신 번호 : " + input);
					break;
			}
			
		}
	}

}
